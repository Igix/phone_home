<!-- buy_1_click modal -->
<div id="buy_1_click" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Мы Вам сегодня перезвоним</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <p><label>Ваше имя *</label> <input class="form-control" type="text" name="user_name" id="user_name"/></p>
                <p><label>Телефон (моб)*</label> <input name="phone" id="phone" type="text"  maxlength="32" placeholder="Введите номер телефона в формате 7(123)-456-7890" class="form-control input-sm"></p>
                <p><label>Примечание</label>
                    <textarea class="form-control" id="feedback_msg" name="feedback_msg"  rows="12" placeholder="Введите текст примечания"></textarea>
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btn_wait_call">Жду звонка</button>
    </div>
</div>

<!--tags list modal-->
<div id="tags_list" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Теги</h4>
    </div>
    <div class="modal-body">
        <div class="row tags_list_block">
            {% set k_categories_arr_len = k_categories_arr|length %}
            {% set k_categories_arr_row = k_categories_arr_len // 3 %}
            {% set k_categories_arr_row = k_categories_arr_row + 1 %}

            <div class="col-md-4">
                {% set start = 0 %}
                {% set finish = k_categories_arr_row %}
                {% for key,value in k_categories_arr %}
                    {% if key >= start and key < finish %}
                        <input type="checkbox" class="tags_list_select" data-k_categories_id="{{value['k_categories_id']}}" value="{{value['name']}}">{{value["name"]}}<br>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% set start = k_categories_arr_row %}
                {% set finish = k_categories_arr_row*2 %}
                {% for key,value in k_categories_arr %}
                    {% if key >= start and key < finish %}
                        <input type="checkbox" class="tags_list_select" data-k_categories_id="{{value['k_categories_id']}}" value="{{value['name']}}">{{value["name"]}}<br>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% set start = k_categories_arr_row*2 %}
                {% set finish = k_categories_arr_len %}
                {% for key,value in k_categories_arr %}
                    {% if key >= start and key < finish %}
                        <input type="checkbox" class="tags_list_select" data-k_categories_id="{{value['k_categories_id']}}" value="{{value['name']}}">{{value["name"]}}<br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btn_tags_list_select">Выбрать</button>
        <a href="#" class='btn btn-primary' data-dismiss="modal">Закрыть</a>
    </div>
</div>